<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background"
    android:id="@+id/main1_layout"
    android:baselineAligned="false">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="40.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="20.0dip">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/profile_body"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/profile_title"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/more_item_press"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Company:"
                            android:id="@+id/company_textview"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:typeface="serif"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="40px"
                            android:layout_toRightOf="@+id/company_textview"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="#EEEEE0"
                        android:layout_marginBottom="10dip"
                        android:id="@+id/linearLayout_1">

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keyword:"
                            android:id="@+id/keyword_textView"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:typeface="serif"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/keyword_editText"
                            android:layout_marginRight="40px"
                            android:layout_toRightOf="@+id/keyword_textView"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:typeface="serif" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="10dip"
                        android:background="#EEEEE0"
                        android:layout_marginBottom="10dip"
                        android:id="@+id/linearLayout_2">

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Count:"
                            android:id="@+id/count_textview"
                            android:textColor="@android:color/black"
                            android:typeface="serif"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40px"
                            android:layout_toRightOf="@+id/count_textview"
                            android:id="@+id/count_editText"
                            android:textColor="@android:color/black"
                            android:typeface="serif"
                            android:textSize="15dp"/>
                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_Button"
                android:text="Search"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"
                android:background="@drawable/round_botton"

                android:textStyle="bold" />
            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/company_spinnerTest"
            android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>







